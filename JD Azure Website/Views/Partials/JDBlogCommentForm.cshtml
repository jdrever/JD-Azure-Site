@model JD_Azure_Website.Models.BlogPostCommentViewModel
@using JD_Azure_Website.Controllers


@using (Html.BeginUmbracoForm<BlogSurfaceController>("PostComment"))
{

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    @Html.TextAreaFor(model => model.CommentText, new { placeholder = "Your Comment" })
    @Html.ValidationMessageFor(model => model.CommentText)
    <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Your Name" })
    @Html.ValidationMessageFor(model => model.Name)
    <br />
    @Html.TextBoxFor(model => model.EmailAddress, new { placeholder = "Email Address" })
    @Html.ValidationMessageFor(model => model.EmailAddress)

    <input type="submit" value="Send" />
}



